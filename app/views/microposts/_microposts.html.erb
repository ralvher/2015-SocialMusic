<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 60), micropost.user %>
  <span class="user ">
    <%= link_to micropost.user.name, micropost.user %>
  </span>

  <span class="timestamp">
    Publicado hace <%= time_ago_in_words(micropost.created_at) %>.
    <% if current_user?(micropost.user) %>
      <%= link_to "Eliminar", micropost, method: :delete,
                                       data: { confirm: "¿Seguro?" } %>
    <% end %>
  </span>

  <span class="content"> 
    <% b = micropost.content.split %>
    <% i = b.size %>
    <p>
        <% for j in 0..i-1 %>
            <%if ((b[j].include? 'https://www.youtube.com/watch?v=') || (b[j].include? 'https://embed.spotify.com/?uri=')) %>
               <strong><i> <%= link_to "Escuchar música", b[j], :alt => "Musica", :title=>b[j] %> </i></strong>
            <%else%>
                <%= b[j] %>
            <%end%>
        <%end%>
    </p>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
   
  <%= render 'microposts/like_form', :@post=> micropost, :@user=>current_user %>
</li>