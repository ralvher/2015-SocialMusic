<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 60), micropost.user %>
  <span class="user ">
    <%= link_to micropost.user.name, micropost.user %>
  </span>

  <span class="timestamp">
    Publicado hace <%= time_ago_in_words(micropost.created_at) %>.
    <% if current_user?(micropost.user) %>
      <%= link_to "Eliminar", micropost, method: :delete,
                                       data: { confirm: "Â¿Seguro?" } %>
    <% end %>
  </span>

  <span class="content">
    <%= micropost.content %>        

    <%= render 'shared/link', :@micropost=> micropost.content%>

    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>

  
  
    <button name="botton" type="submit" class="like">
      <%= image_tag "like.png", width: '60', height: '20', :alt => "SocialMusic like", :title => "SocialMusic LOGO" %>
    </button>
  
</li>