<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 60), micropost.user %>
  <span class="user">
    <%= link_to micropost.user.name, micropost.user %>
  </span>
  <span class="content">
    <%= micropost.content %>        

    <%if (micropost.content.include? 'https://www.youtube.com/watch?v=') %>
        <% a = micropost.content.split %>
        <% i = a.size %>
        <% for j in 0..i %>
          <% a = a[j] if a[j].include? "https://www.youtube."%>
        <%end%>
        <%= video_tag(a, id: "player1", type: "video/youtube", size: "320x180") %>
    <%end %> 

    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>

  <span class="timestamp">
    Publicado hace <%= time_ago_in_words(micropost.created_at) %>.
    <% if current_user?(micropost.user) %>
      <%= link_to "Eliminar", micropost, method: :delete,
                                       data: { confirm: "Â¿Seguro?" } %>
    <% end %>
    
    <br>
    <button name="botton" type="submit">
    <%= image_tag "like.png", width: '60', height: '20', :alt => "SocialMusic like", :title => "SocialMusic LOGO" %>
    </button>

    

  </span>
</li>