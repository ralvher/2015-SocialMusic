<%if (@micropost.include? 'https://www.youtube.com/watch?v=') %>
        
        <% a = @micropost.split %>
        <% i = a.size %>      
        <% for j in 0..i %>
          <% a = a[j] if a[j].include? "https://www.youtube."%>
        <%end%>
        <%= video_tag(a, id: "player1", type: "video/youtube", size: "320x180") %>
<%end %> 

