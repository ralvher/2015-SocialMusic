<% provide(:title, "Configuracion") %>
<h1>Actualizar datos</h1>

<div class="row">
  <div class="datos col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3 col-xs-12 col-sm-12">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name, "Nombre" %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email, "Email" %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password, "ContraseÃ±a" %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmar" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit "Guardar cambios", class: "btn btn-success" %>
    <% end %>

    
